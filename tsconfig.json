{
  "compilerOptions": {
    "lib": ["esnext"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "commonjs",
    "outDir": "./dist",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
